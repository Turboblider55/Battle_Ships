<Window x:Class="Battle_Ships.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:Battle_Ships"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Battle Ships" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <Label FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center">Battle Ships</Label>    
        
        <Grid Grid.Row="1" x:Name="GameField">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.12*" ></ColumnDefinition>
                <ColumnDefinition Width="0.35*" x:Name="MyField"></ColumnDefinition>
                <ColumnDefinition Width="0.06*"></ColumnDefinition>
                <ColumnDefinition Width="0.35*" x:Name="EnemyField"></ColumnDefinition>
                <ColumnDefinition Width="0.12*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" x:Name="MyShipButtons">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                        <Setter Property="FontSize" Value="25"></Setter>
                    </Style>
                </Grid.Resources>

                <Button Grid.Row="0" Click="ShipSizeBtn_Click" >1X1 Ship</Button>
                <Button Grid.Row="1" Click="ShipSizeBtn_Click">1X2 Ship</Button>
                <Button Grid.Row="2" Click="ShipSizeBtn_Click">1X4 Ship</Button>
                <Button Grid.Row="3" Click="ShipSizeBtn_Click">2X2 Ship</Button>
                <Button Grid.Row="4" Content="Ready" Click="Ready_Click"/>
            </Grid>

            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                        <Setter Property="FontSize" Value="25"></Setter>
                    </Style>
                </Grid.Resources>

                <Button Grid.Row="0">1X1 Ship</Button>
                <Button Grid.Row="1">1X2 Ship</Button>
                <Button Grid.Row="2">1X4 Ship</Button>
                <Button Grid.Row="3">2X2 Ship</Button>
                <Button Grid.Row="4" Content="Ready"></Button>
            </Grid>

            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Transparent"></Setter>
                    <Setter Property="BorderBrush" Value="Transparent"></Setter>
                    
                </Style>
            </Grid.Resources>
            
            

        </Grid>
    </Grid>
</Window>
